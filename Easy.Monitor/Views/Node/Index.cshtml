@model IEnumerable<Easy.Monitor.Application.Models.Node.Node>
@{
    ViewBag.Title = "节点列表";
    Layout = "~/Views/Shared/MainLayout.cshtml";
}
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            @(ViewBag.ServiceName)节点列表
        </h1>
        <ol class="breadcrumb">
            <li><a href="/Directory/index"><i class="fa fa-th"></i> @(ViewBag.ServiceName)</a></li>
            <li class="active">节点列表</li>
        </ol>
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    <div class="box-header" style="height:45px">
                        <div class="box-tools">
                            <div class="input-group" style="width: 150px;">
                                <input type="text" name="table_search" class="form-control input-sm pull-right" placeholder="Search">
                                <div class="input-group-btn">
                                    <button class="btn btn-sm btn-default"><i class="fa fa-search"></i></button>
                                </div>
                            </div>
                        </div>
                    </div><!-- /.box-header -->
                    <div class="box-body table-responsive no-padding">
                        <table class="table table-hover">
                            <tr>
                                <th>IP</th>
                                <th>API</th>
                                <th>图表</th>
                            </tr>
                            @foreach (var m in Model)
                            {
                                <tr>
                                    <td>@m.Ip</td>
                                    <td>@m.Url</td>
                                    <td>
                                        <a class="btn btn-block btn-default" href="/ServiceHostMiniChart/index?host=@m.Ip&serviceName=@m.ServiceName">图表</a>
                                    </td>
                                </tr>
                            }
                        </table>
                    </div><!-- /.box-body -->
                </div><!-- /.box -->
            </div>
        </div>
    </section><!-- /.content -->
</div>
